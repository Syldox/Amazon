<%-layout('main') -%>

<div class="container signup">

    <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-success"><%= message %>
        <a type="button" class="close" data-dismiss="alert" aria-label="close">X</a>
        <span aria-hidden="true">&times;</span>
    </div>
<% } %>
        <form class="form-horizontal" role="form" method="POST">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2>Add-Category</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    <label for="name">Name</label>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                            <input type="text" name="name" class="form-control" id="category"
                                   placeholder="category" required autofocus>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                            <span class="text-danger align-middle">
                                <!-- Put e-mail validation error messages here -->
                            </span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn-class btn btn-primary "><i class="fa fa-plus"></i> Add</button>
                </div>
            </div>
        </form>
    </div>

       